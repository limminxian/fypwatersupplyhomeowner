<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".profileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutToolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_menu"
                app:tint="@color/colorWhite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Edit Ticket"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <!--        INPUT VIEWS HERE-->

        <TextView
            android:id="@+id/editTicketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Edit Ticket"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutToolBar" />


        <Spinner
            android:id="@+id/ticketTypeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="#0583BC"
            app:layout_constraintBottom_toBottomOf="@+id/ticketMsg"
            app:layout_constraintStart_toEndOf="@+id/ticketMsg"
            app:layout_constraintTop_toTopOf="@+id/ticketMsg"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/ticketMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ticket Type"
            app:layout_constraintEnd_toEndOf="@+id/editTicketTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/editTicketTitle" />

        <TextView
            android:id="@+id/descriptionMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="@+id/ticketMsg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ticketMsg"
            app:layout_constraintTop_toBottomOf="@+id/ticketMsg" />

        <EditText
            android:id="@+id/descriptionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/review_style"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/descriptionMsg"
            app:layout_constraintStart_toStartOf="@+id/descriptionMsg"
            app:layout_constraintTop_toBottomOf="@+id/descriptionMsg" />

        <Button
            android:id="@+id/editTicketBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Edit"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/descriptionTxt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/descriptionTxt"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTxt" />

        <TextView
            android:id="@+id/chatBox"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:layout_margin="20dp"
            android:background="@drawable/review_style"
            android:gravity="top"
            android:hint="Chat with customer service agent here:"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTicketBtn"
            app:layout_constraintVertical_bias="0.364" />

        <EditText
            android:id="@+id/chatTxt"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/review_style"
            android:gravity="top"
            android:hint="Enter message"
            android:inputType="textMultiLine"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/chatBox"
            app:layout_constraintEnd_toEndOf="@+id/chatBox"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/chatBox"
            app:layout_constraintTop_toTopOf="@+id/chatBox"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reply"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/chatTxt"
            app:layout_constraintEnd_toEndOf="@+id/chatTxt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/chatTxt"
            app:layout_constraintTop_toTopOf="@+id/chatTxt"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:backgroundTint="@color/light_blue"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

