<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/oldPasswordTxt"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:hint="old password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/newPasswordTxt"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:hint="new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/oldPasswordTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/oldPasswordTxt"
        app:layout_constraintTop_toBottomOf="@+id/oldPasswordTxt" />

    <EditText
        android:id="@+id/cmfNewPasswordTxt"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:hint="re-enter new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/newPasswordTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/newPasswordTxt"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>