<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verificationActivity">


    <TextView
        android:id="@+id/verificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <TextView
        android:id="@+id/verificationMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Please enter the code that was sent to your email"
        app:layout_constraintStart_toStartOf="@+id/verificationTitle"
        app:layout_constraintEnd_toEndOf="@+id/verificationTitle"
        app:layout_constraintTop_toBottomOf="@+id/verificationTitle" />

    <Button
        android:id="@+id/verificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Verify Code"
        app:layout_constraintEnd_toEndOf="@+id/verificationTxt"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/verificationTxt"
        app:layout_constraintTop_toBottomOf="@+id/verificationTxt" />

    <EditText
        android:id="@+id/verificationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:maxLength="6"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/verificationMsg"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/verificationMsg"
        app:layout_constraintTop_toBottomOf="@+id/verificationMsg" />

</androidx.constraintlayout.widget.ConstraintLayout>